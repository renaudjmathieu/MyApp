{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "www/dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "esModuleInterop": true,
    "allowJs": true,
  },
  "include": [
    "src/index.tsx", 
    "custom.d.ts"
  ]
}